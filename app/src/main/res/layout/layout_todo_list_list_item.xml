<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data class="TodoListListItemBinding">

        <variable
                name="viewModel"
                type="dev.pinaki.todoapp.features.todolists.AllListsViewModel" />

        <variable
                name="todoList"
                type="dev.pinaki.todoapp.data.source.local.db.entity.TodoList" />

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:onClick="@{()->viewModel.onTodoListItemClick(todoList)}"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@{todoList.title}"
                android:textColor="@color/black"
                tools:text="Tweets to post" />

        <include layout="@layout/item_divider" />
    </LinearLayout>
</layout>